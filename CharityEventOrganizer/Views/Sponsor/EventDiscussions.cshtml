@model IEnumerable<CharityEventOrganizer.Models.Entities.Event>
@{
    ViewData["Title"] = "Event Discussions";
}

<!-- Hero Section -->
<section class="discussions-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="animate fade-in">Event <span class="text-highlight">Discussions</span></h1>
                <p class="hero-subtitle animate fade-in">Manage your ongoing conversations with event organizers.</p>
            </div>
            <div class="col-lg-4 text-right">
                <a asp-action="Dashboard" class="btn btn-outline-primary btn-rounded animate fade-in">
                    <i class="fas fa-chevron-left mr-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
    <div class="wave-divider"></div>
</section>

<!-- Event Discussions List -->
<section class="discussions-list-section">
    <div class="container">
        <div class="section-header">
            <h2 class="animate fade-in">Ongoing Discussions</h2>
            @if (Model.Any())
            {
                <p class="animate fade-in">You're currently in discussion with @Model.Count() event organizers. Engage with them to make a difference!</p>
            }
            else
            {
                <p class="animate fade-in">You don't have any ongoing discussions with event organizers at the moment.</p>
            }
        </div>

        @if (Model.Any())
        {
            <div class="discussions-list">
                @foreach (var item in Model)
                {
                    <div class="discussion-item animate fade-in">
                        <div class="discussion-main">
                            <div class="discussion-info">
                                <h3 class="discussion-title">@item.Title</h3>
                                <div class="discussion-meta">
                                    <span class="discussion-meta-item">
                                        <i class="fas fa-calendar-alt"></i> @item.EventDate.ToString("MMMM dd, yyyy")
                                    </span>
                                    <span class="discussion-meta-item">
                                        <i class="fas fa-map-marker-alt"></i> @item.Location
                                    </span>
                                    <span class="discussion-meta-item">
                                        <i class="fas fa-tag"></i> @item.Cause.Name
                                    </span>
                                    <span class="discussion-meta-item">
                                        <i class="fas fa-user"></i> Organizer: @item.Organizer.UserName
                                    </span>
                                </div>
                                <div class="discussion-description">
                                    @(item.Description?.Length > 200 ? item.Description.Substring(0, 200) + "..." : item.Description)
                                </div>
                            </div>
                            <div class="discussion-actions">
                                <a asp-controller="Events" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-info-circle mr-1"></i> View Event Details
                                </a>
                                <button type="button" class="btn btn-primary btn-sm"
                                        onclick="openDiscussionModal('@item.Id', '@item.Title', '@item.Organizer.UserName')">
                                    <i class="fas fa-comments mr-1"></i> Open Discussion
                                </button>
                            </div>
                        </div>
                        <div class="discussion-status">
                            <div class="discussion-status-badge">
                                <i class="fas fa-comments"></i> In Discussion
                            </div>
                            <div class="discussion-options">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton_@item.Id" data-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton_@item.Id">
                                        <form asp-action="FinalizeSponsorship" asp-route-id="@item.Id" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-success">
                                                <i class="fas fa-check-circle mr-2"></i> Finalize Sponsorship
                                            </button>
                                        </form>
                                        <form asp-action="CancelInterest" asp-route-id="@item.Id" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-times-circle mr-2"></i> Cancel Interest
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state animate fade-in">
                <div class="empty-state-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <h3 class="empty-state-title">No Ongoing Discussions</h3>
                <p class="empty-state-message">You don't have any events in discussion at the moment. Express interest in an event to start a conversation!</p>
                <a asp-action="EventsForSponsorship" class="btn btn-primary btn-rounded">
                    <i class="fas fa-search mr-2"></i>Find Events to Sponsor
                </a>
            </div>
        }
    </div>
</section>

<!-- Call to Action Section -->
<section class="sponsor-cta-section">
    <div class="container">
        <div class="cta-content text-center">
            <h2 class="animate fade-in">Ready to Make More <span class="text-highlight">Impact</span>?</h2>
            <p class="animate fade-in">Discover more events that align with your values and help communities thrive.</p>
            <a asp-action="EventsForSponsorship" class="btn btn-primary btn-lg btn-rounded animate fade-in">
                <i class="fas fa-search mr-2"></i>Find More Events
            </a>
        </div>
    </div>
</section>

<!-- Discussion Modal (will be populated via JavaScript) -->
<div class="modal fade" id="discussionModal" tabindex="-1" aria-labelledby="discussionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="discussionModalLabel">Discussion: <span id="modalEventTitle"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="discussion-container">
                    <div class="discussion-info">
                        <p>Discussion with <strong id="modalOrganizerName"></strong> about event sponsorship</p>
                    </div>
                    <div class="message-thread" id="messageThread">
                        <!-- Sample messages for now - will be replaced with actual API data -->
                        <div class="message-date-separator">
                            <span>Today</span>
                        </div>

                        <div class="message organizer-message">
                            <div class="message-content">
                                <p>Hello! Thanks for your interest in sponsoring our event. What kind of support are you looking to provide?</p>
                                <span class="message-time">10:30 AM</span>
                            </div>
                        </div>

                        <div class="message sponsor-message">
                            <div class="message-content">
                                <p>Hi! We're interested in providing both financial support and promotional materials. What's your expected audience size?</p>
                                <span class="message-time">11:15 AM</span>
                            </div>
                        </div>
                    </div>

                    <div class="message-input">
                        <textarea id="messageText" placeholder="Type your message here..." class="form-control"></textarea>
                        <button id="sendMessageBtn" class="btn btn-primary send-btn">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="modal-actions">
                    <form id="cancelInterestForm" asp-action="CancelInterest" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="cancelEventId" name="id" value="">
                        <button type="submit" class="btn btn-outline-danger mr-2">
                            <i class="fas fa-times-circle mr-1"></i> Cancel Interest
                        </button>
                    </form>
                    <form id="finalizeForm" asp-action="FinalizeSponsorship" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="finalizeEventId" name="id" value="">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check-circle mr-1"></i> Finalize Sponsorship
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Function to open discussion modal
        function openDiscussionModal(eventId, eventTitle, organizerName) {
            document.getElementById('modalEventTitle').textContent = eventTitle;
            document.getElementById('modalOrganizerName').textContent = organizerName;
            document.getElementById('cancelEventId').value = eventId;
            document.getElementById('finalizeEventId').value = eventId;

            // In a real implementation, you would load actual messages here via AJAX

            $('#discussionModal').modal('show');
        }

        // Handle sending a new message
        document.getElementById('sendMessageBtn').addEventListener('click', function() {
            const messageText = document.getElementById('messageText').value.trim();
            if (!messageText) return;

            // In a real implementation, you would save the message via AJAX
            // For now, just add it to the UI
            const messageThread = document.getElementById('messageThread');
            const currentTime = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});

            const messageHtml = `
                <div class="message sponsor-message">
                    <div class="message-content">
                        <p>${messageText}</p>
                        <span class="message-time">${currentTime}</span>
                    </div>
                </div>
            `;

            messageThread.insertAdjacentHTML('beforeend', messageHtml);
            document.getElementById('messageText').value = '';

            // Scroll to bottom of messages
            messageThread.scrollTop = messageThread.scrollHeight;
        });

        // Also send message on Enter key (but Shift+Enter allows newlines)
        document.getElementById('messageText').addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                document.getElementById('sendMessageBtn').click();
            }
        });
    </script>
}