@model CharityEventOrganizer.Models.ViewModels.SponsorProfileViewModel
@{
    ViewData["Title"] = "Complete Your Sponsor Profile";
}

<!-- Hero Section -->
<section class="complete-profile-hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="animate fade-in">Complete Your <span class="text-highlight">Sponsor Profile</span></h1>
                <p class="hero-subtitle animate fade-in">Just a few more details to get started with sponsoring meaningful charity events.</p>
            </div>
        </div>
    </div>
    <div class="wave-divider"></div>
</section>

<!-- Complete Profile Form -->
<section class="complete-profile-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="complete-profile-card animate fade-in">
                    <div class="card-body">
                        <div class="welcome-message">
                            <div class="welcome-icon">
                                <i class="fas fa-handshake"></i>
                            </div>
                            <h2>Welcome to Heartful Events!</h2>
                            <p>As a sponsor, you'll be able to discover and support meaningful charity events that align with your values. Please complete your sponsor profile to get started.</p>
                        </div>

                        <form asp-action="CompleteProfile" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Name">Organization Name</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-building"></i>
                                    <input asp-for="Name" class="form-control" placeholder="Your organization's name">
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Organization Description</label>
                                <div class="input-with-icon textarea-icon">
                                    <i class="fas fa-align-left"></i>
                                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Describe your organization, mission, and what types of events you're interested in sponsoring..."></textarea>
                                </div>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <small class="form-text text-muted">This information will be visible to event organizers when you express interest in their events.</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="Website">Website URL</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-globe"></i>
                                    <input asp-for="Website" class="form-control" placeholder="https://your-organization.com">
                                </div>
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>

                            <div class="form-actions text-center">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-check-circle mr-2"></i>Complete Profile
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Benefits Card -->
                <div class="benefits-card animate fade-in">
                    <h3><i class="fas fa-award mr-2"></i>Benefits of Being a Sponsor</h3>
                    <div class="benefits-list">
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="fas fa-heart"></i>
                            </div>
                            <div class="benefit-content">
                                <h4>Make a Meaningful Impact</h4>
                                <p>Support causes that align with your organization's values and make a real difference in communities.</p>
                            </div>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="benefit-content">
                                <h4>Build Connections</h4>
                                <p>Network with passionate event organizers and other sponsors who share your commitment to positive change.</p>
                            </div>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="fas fa-bullhorn"></i>
                            </div>
                            <div class="benefit-content">
                                <h4>Enhance Your Reputation</h4>
                                <p>Demonstrate your corporate social responsibility and build goodwill in the community.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}