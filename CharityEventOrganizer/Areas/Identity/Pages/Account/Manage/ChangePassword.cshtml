@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="profile-hero">
    <div class="profile-hero-content">
        <h1>Change Your <span class="text-gradient">Password</span></h1>
        <p>Update your password to keep your account secure</p>
    </div>
    <div class="profile-hero-decoration"></div>
</div>

<div class="container">
    <div class="profile-dashboard">
        <!-- Left Sidebar with Avatar and Navigation -->
        <div class="profile-sidebar">
            <div class="profile-avatar-container">
                <div class="profile-avatar-placeholder">
                    @(User.Identity.Name?.Substring(0, 1).ToUpper())
                </div>
                <h3 class="profile-name">@User.Identity.Name</h3>
                <div class="profile-tags">
                    <span class="profile-tag">Organizer</span>
                    <span class="profile-tag">Volunteer</span>
                </div>
            </div>

            <nav class="profile-navigation">
                <a asp-page="./Index" class="profile-nav-item">
                    <i class="fas fa-user-circle"></i>
                    <span>Profile</span>
                </a>
                <a asp-page="./ChangePassword" class="profile-nav-item active">
                    <i class="fas fa-lock"></i>
                    <span>Password</span>
                </a>
                <a asp-page="./PersonalData/PersonalData" class="profile-nav-item">
                    <i class="fas fa-shield-alt"></i>
                    <span>Personal Data</span>
                </a>
                <a asp-controller="Events" asp-action="MySubmissions" class="profile-nav-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span>My Events</span>
                </a>
            </nav>

            <div class="impact-summary">
                <h4>Your Impact</h4>
                <div class="impact-stats">
                    <div class="impact-stat">
                        <div class="impact-number">3</div>
                        <div class="impact-label">Events Created</div>
                    </div>
                    <div class="impact-stat">
                        <div class="impact-number">12</div>
                        <div class="impact-label">Lives Touched</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="profile-content">
            <div class="content-header">
                <h2>Change Password</h2>
                <p>Update your password to keep your account secure</p>
            </div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <form id="change-password-form" method="post" class="profile-form">
                <div class="form-section">
                    <h3 class="form-section-title">
                        <i class="fas fa-key"></i>
                        Password Settings
                    </h3>

                    <div class="form-group">
                        <label asp-for="Input.OldPassword">Current Password</label>
                        <div class="input-with-icon">
                            <i class="fas fa-lock"></i>
                            <input asp-for="Input.OldPassword" class="form-control" type="password" />
                        </div>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.NewPassword">New Password</label>
                        <div class="input-with-icon">
                            <i class="fas fa-lock"></i>
                            <input asp-for="Input.NewPassword" class="form-control" type="password" id="newPassword" />
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword">Confirm New Password</label>
                        <div class="input-with-icon">
                            <i class="fas fa-check-circle"></i>
                            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-save">
                        <i class="fas fa-save"></i>
                        Update Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}